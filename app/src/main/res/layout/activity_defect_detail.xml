<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_weight="10"
    android:background="@color/White">
    <ScrollView
        android:layout_weight="9"
        android:clipToPadding="true"
        android:fillViewport="false"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="10">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Defect Detail"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="18dp"
                android:padding="7dp"
                android:textStyle="bold"
                android:background="@color/Black"
                android:layout_marginBottom="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="vertical"
                android:weightSum="1.75"
                android:background="@color/Black">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.75"
                    android:text="Location:"
                    android:textColor="@color/White"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:text="defect place"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="vertical"
                android:weightSum="1.75"
                android:background="@color/Black"
                android:layout_marginTop="0.5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.75"
                    android:text="Trade name:"
                    android:textColor="@color/White"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtTrade"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:text="trade_name"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:weightSum="1.75"
            android:background="@color/Black"
            android:layout_marginTop="0.5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.75"
                    android:text="Description:"
                    android:textColor="@color/White"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtDes"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:text="description_detail"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="vertical"
                android:weightSum="1.75"
                android:background="@color/Black"
                android:layout_marginTop="0.5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.75"
                    android:text="Date created:"
                    android:textColor="@color/White"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtDateCreate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:text="20/2/1698"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="vertical"
                android:weightSum="1.75"
                android:background="@color/Black"
                android:layout_marginTop="0.5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.75"
                    android:text="Assigned to"
                    android:textColor="@color/White"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtAssign"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:text="contractor_name"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="vertical"
                android:weightSum="1.75"
                android:background="@color/Black"
                android:layout_marginTop="0.5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.75"
                    android:text="Note(s)"
                    android:textColor="@color/White"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtNote"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:text="some_note"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <EditText
                android:background="@color/Orange"
                android:id="@+id/editNote"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                android:visibility="gone"/>
            <EditText
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="18dp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:orientation="horizontal"
                android:weightSum="10"
                android:background="@color/Black">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Completed:"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:padding="10dp"/>

                <CheckBox
                    android:id="@+id/checkComplete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:buttonTint="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2"
                android:background="@color/Black"
                android:layout_marginTop="0.5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Defect Before"
                    android:textColor="@color/White"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/imageViewDownload"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/photo_icon_white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2"
                android:background="@color/Black"
                android:layout_marginTop="0.5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Defect Before"
                    android:textColor="@color/White"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/imageAfterClose"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/photo_icon_white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="12"
            android:orientation="horizontal"
            android:layout_marginLeft="-20dp">


            <Button
                android:id="@+id/editDefectDetail"
                android:textAlignment="center"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:text="Edit"
                />

            <Button
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:text="Home"
                android:onClick="go_to_homescreen"
                />

            <Button
                android:id="@+id/CloseDefectBtn"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:text="Close Defect" />
        </LinearLayout>

</LinearLayout>
