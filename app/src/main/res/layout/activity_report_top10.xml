<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="12"
    android:orientation="vertical"
    android:background="@color/Black"
    tools:context="vn.com.ifca.defecttracking.Activities.ReportTop10Activity">
    <LinearLayout
        android:id="@+id/project_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintTop_toBottomOf="@+id/filter_project">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="8"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            android:text="Defect's Name"
            android:textColor="@color/White"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            android:text="Count No."
            android:textColor="@color/White"
            android:textStyle="bold" />
    </LinearLayout>

        <ListView
            android:id="@+id/lvReportTop10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

        </ListView>

    <LinearLayout
        android:id="@+id/confirm_defect_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/Black"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/Orange"
            android:onClick="go_to_back_screen"
            android:text="@string/backBtn" />

        <Button
            android:id="@+id/a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/Orange"
            android:onClick="go_to_homescreen"
            android:text="@string/homeBtn"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />
    </LinearLayout>

    </LinearLayout>
