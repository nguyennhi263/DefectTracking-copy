<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.com.ifca.defecttracking.Activities.SelectUnitActivity">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/Black"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:padding="22dp"
                android:text="@string/project"
                android:textColor="@color/White"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spProject"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:backgroundTint="@color/White"
                android:padding="20dp"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="2dp"
            android:background="@color/Black"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:text="@string/phase"
                android:textColor="@color/White"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spPhase"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:backgroundTint="@color/White"
                android:padding="20dp"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="2dp"
            android:background="@color/Black"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:text="@string/block"
                android:textColor="@color/White"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spBlock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:backgroundTint="@color/White"
                android:padding="20dp"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="2dp"
            android:background="@color/Black"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:text="@string/floor"
                android:textColor="@color/White"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spFloor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:backgroundTint="@color/White"
                android:padding="20dp"
                android:foregroundTint="@color/Orange"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="2dp"
            android:background="@color/Black"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:text="@string/unit"
                android:textColor="@color/White"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spUnit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:backgroundTint="@color/White"
                android:padding="20dp"></Spinner>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Black"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="go_to_back_screen"
            android:text="@string/backBtn" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="go_to_homescreen"
            android:text="@string/homeBtn" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="go_to_select_trade_screen"
            android:text="@string/nextBtn" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        android:background="@color/Black" />

</android.support.constraint.ConstraintLayout>
