<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="10"
    tools:context="vn.com.ifca.defecttracking.Activities.SelectUnitActivity">



    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_weight="1.5"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_marginLeft="30dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:text="Select Project"
            android:textColor="@color/colorAccent"
            />
        <Spinner
            android:id="@+id/spProject"
            android:layout_width="0dp"
            android:gravity="top"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="6.5" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_weight="1.5"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_marginLeft="30dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:text="Select Phase"
            android:textColor="@color/colorAccent"
           />

        <Spinner
            android:id="@+id/spPhase"
            android:layout_width="0dp"
            android:gravity="top"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="6.5" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_weight="1.5"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="15dp"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorAccent"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:text="Select Block" />

        <Spinner
            android:id="@+id/spBlock"
            android:layout_width="0dp"
            android:gravity="top"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="6.5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:text="Select Floor"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorAccent"
            />

        <Spinner
            android:id="@+id/spFloor"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_gravity="top"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="6.5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1.5"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:layout_marginLeft="30dp"
            android:text="Select Unit"
            android:textColor="@color/colorAccent"
            />

        <Spinner
            android:id="@+id/spUnit"
            android:layout_width="0dp"
            android:layout_gravity="top"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="6.5" />


    </LinearLayout>
    <LinearLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"



        android:orientation="horizontal"
        android:weightSum="10">
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="12"
        android:layout_marginLeft="-10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button3"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:text="Back"
            android:onClick="go_to_back_screen"
            />

        <Button
            android:id="@+id/button4"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:text="Home"
            android:onClick="go_to_homescreen"
            />

        <Button
            android:id="@+id/button2"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:onClick="go_to_select_trade_screen"
            android:text="Next" />
    </LinearLayout>

</LinearLayout>
