<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="@color/backgroudFrag"
    tools:context="vn.com.ifca.defecttracking.Activities.UserManagementActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:text="User management"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvUser"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="9"
        android:layout_marginBottom="20dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"></ListView>
    <!--Footer-->
    <LinearLayout
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="12"
        android:layout_marginLeft="-10dp"

        android:orientation="horizontal">


        <Button
            android:id="@+id/b"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:text="Back"
            android:onClick="go_to_back_screen"/>

        <Button
            android:id="@+id/a"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:text="Home"
            android:onClick="go_to_home_screen"/>

        <Button
            android:id="@+id/saveBtn"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="save" />
    </LinearLayout>
    <!--End of Footer-->
</LinearLayout>
